-# frozen_string_literal: true
= simple_form_for [:admin, @post] do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.input :title
  = f.input :slug
  = f.input :published_at, as: :date_time_picker
  = f.input :body, as: :text, input_html: { :rows => '20', :autocomplete => "off", :id => "froalaEditor" }
  = f.input :is_draft, input_html: { :checked => 'checked' }
  = f.button :submit, class: 'btn-outline-primary'
