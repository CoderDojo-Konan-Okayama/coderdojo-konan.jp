!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / Page styles
    %link{:href => "https://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}/
    %link{:href => "https://code.getmdl.io/1.3.0/material.indigo-pink.min.css", :rel => "stylesheet"}/
    %script{:defer => "defer", :src => "https://code.getmdl.io/1.3.0/material.min.js"}
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %title= full_title(yield(:title))
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "summary", :name => "twitter:card"}/
    %meta{:content => "@coderdojo_konan", :name => "twitter:site"}/
    %meta{:content => "#{full_title(yield(:title))}", :name => "twitter:title"}/
    %meta{:content => "#{yield(:desc)}", :name => "twitter:description"}/
    %meta{:content => "#{full_title(yield(:title))}", :property => "og:title"}/
    %meta{:content => "http://#{request.host}#{request.fullpath}", :property => "og:url"}/
    %meta{:content => "#{yield(:desc)}", :property => "og:description"}/
    %meta{:content => "CoderDojo Konan Okayama Official Site", :property => "og:site_name"}/
    %meta{:content => "#{root_url}og-coderdojo-konan-image.jpg", :property => "og:image"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "1974108302904511", :property => "fb:app_id"}/
    %meta{:coderdojo => "1881439892127060", :property => "fb:pages"}/
    %meta{:content => "CoderDojo 岡山 岡南", :name => "author"}/
  %body
    = yield
